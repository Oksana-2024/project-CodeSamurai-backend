  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "description": "A unique ID for the user in the database. Automatically generated when the user is created.\n",
            "type": "string",
            "example": "67cd81343b84f810f27e521f"
          },
          "name": {
            "description": "The user's full name. Must contain only letters (Latin characters), with a minimum of 3 and a maximum of 20 characters. Special characters and numbers are not allowed. This field is required for registration.\n",
            "type": "string",
            "minLength": 2,
            "maxLength": 20,
            "example": "John Doe"
          },
          "email": {
            "description": "The user's email address, used as a unique login credential. Must be a valid email format and no more than 64 characters long. This field is required for both registration and login.\n",
            "type": "string",
            "format": "email",
            "maxLength": 64,
            "example": "example@mail.com"
          },
          "password": {
            "description": "The user's password. Must be between 6 and 20 characters. It must include at least:\n- one uppercase letter,\n- one lowercase letter,\n- one number,\n- one special character (!@#$%^&* etc).\nShould not contain whitespace. Required for account creation.\n",
            "type": "string",
            "minLength": 6,
            "maxLength": 20,
            "example": "pCVVJHbCsY57"
          },
          "balance": {
            "description": "The user's current financial balance represented as a number. This field is optional and defaults to 0.\nThe balance can be updated through transactions, displayed on the user's dashboard or profile page to show their current available balance in real-time.\n",
            "type": "number",
            "default": 0,
            "example": 0
          },
          "photo": {
            "description": "Optional URL to the user's profile photo. May be null. If provided, must be a valid image URL\nand can be used to personalize the user's profile page.\n",
            "type": "string",
            "format": "uri",
            "example": "https://res.cloudinary.com/dlejcfotr/image/upload/v1743263889/cl4t7hdyrzxbzxhqeh5i.jpg"
          }
        }
      },
      "transactions": {
        "type": "object",
        "required": [
          "_id",
          "userId",
          "date",
          "type",
          "categoryId",
          "sum"
        ],
        "properties": {
          "_id": {
            "description": "A unique ID for the transaction in the database. Automatically generated when the transaction is created.\n",
            "type": "string",
            "example": "67cece57cf044b5afacf7749"
          },
          "userId": {
            "description": "A required reference to the user who owns this resource. Must be a valid MongoDB ObjectId string corresponding to an existing user.\n",
            "type": "string",
            "format": "objectId",
            "pattern": "^[0-9a-fA-F]{24}$",
            "example": "67cd81343b84f810f27e521f"
          },
          "date": {
            "description": "ISO 8601 formatted date of the transaction.",
            "type": "string",
            "format": "date-time",
            "example": "2025-04-01T00:00:00.000Z"
          },
          "type": {
            "description": "Type of the transaction. Allowed values are 'income' or 'expense'.",
            "type": "string",
            "enum": [
              "income",
              "expense"
            ],
            "example": "income",
            "default": "income"
          },
          "categoryId": {
            "description": "A valid MongoDB ObjectId representing the category of the transaction.",
            "type": "string",
            "pattern": "^[0-9a-fA-F]{24}$",
            "example": "680a680d4d3d230f60d30fc1"
          },
          "sum": {
            "description": "The amount of the transaction. Must be a positive number.",
            "type": "number",
            "format": "float",
            "example": 15423.6
          },
          "comment": {
            "description": "Optional comment or note related to the transaction. Can be left empty.",
            "type": "string",
            "example": "Products in the supermarket",
            "default": " "
          }
        }
      },
      "categories": {
        "type": "object",
        "required": [
          "_id",
          "name"
        ],
        "properties": {
          "_id": {
            "description": "Unique identifier for the category. Automatically generated MongoDB ObjectId.",
            "type": "string",
            "pattern": "^[0-9a-fA-F]{24}$",
            "example": "680a680d4d3d230f60d30fc1"
          },
          "name": {
            "description": "Descriptive name of the category (e.g. \"Main expenses\", \"Salary\").",
            "type": "string",
            "example": "Main expenses"
          }
        }
      }
